<Window x:Class="Pano.MainWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pano"
        xmlns:view="clr-namespace:Pano.View"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800"
        DataContext="{Binding Main, Source={StaticResource Locator}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Menu Grid.Row="0" 
              Grid.ColumnSpan="2"
              HorizontalAlignment="Stretch" 
              VerticalAlignment="Top"
              Height="30">
            <MenuItem Header="_Developer Mode" IsCheckable="True" IsChecked="{Binding IsInDeveloperMode, Source={StaticResource VmResources}, Mode=TwoWay}"/>
        </Menu>
        <view:ProjectsListView Grid.Row="1"/>
        <view:ProjectDetailsView Grid.Row="1" Grid.Column="1"/>
        

    </Grid>
</Window>
