<Window x:Class="Pano.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pano"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        AllowDrop="True">
    <Grid Name="MainGrid"
        AllowDrop="True"
        DragEnter="Grid_DragEnter"
        DragOver="MainGrid_DragOver"
        Drop="Grid_Drop"
        DragLeave="Grid_DragLeave"
        Background="Transparent"
        >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="1" FontSize="40">TEST TO JEST</Label>

        <Border BorderBrush="Black" BorderThickness="1" Background="#80000000" Visibility="{Binding IsDragging}" Grid.RowSpan="3">
            <Grid>
                <TextBlock Margin="0" TextWrapping="Wrap" Text="Drop Files Here" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="Bold" Foreground="#7EFFFFFF"/>
            </Grid>
        </Border>

    </Grid>
</Window>
