<Page x:Class="Pano.View.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pano.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1"
      DataContext="{Binding Page1, Source={StaticResource Locator}}">

    <StackPanel>
        <Label Content="Page 1" HorizontalContentAlignment="Center"/>
        <Label Content="{Binding Description}" HorizontalContentAlignment="Center"/>
        <Button Content="Page 1" IsEnabled="False" Click="Page1Button_Click"/>
        <Button Content="Page 2" Click="Page2Button_Click"/>
        <Button Content="Page 3" Click="Page3Button_Click"/>
    </StackPanel>
</Page>
