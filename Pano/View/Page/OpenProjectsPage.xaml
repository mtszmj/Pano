<Page x:Class="Pano.View.OpenProjectsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pano.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OpenOpenProjectsPage"
      DataContext="{Binding OpenProjects, Source={StaticResource Locator}}"
>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button Content="Wstecz" Margin="5" MinHeight="20" MinWidth="80" Command="{Binding BackCommand}"/>
        </StackPanel>
        <local:ProjectsListView Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Margin="5"/>
        <local:ProjectDetailsView Grid.Row="1" Grid.Column="1" Margin="0 5 5 5"/>
        <Button Grid.Row="2" Grid.Column="1"/>
    </Grid>
</Page>
